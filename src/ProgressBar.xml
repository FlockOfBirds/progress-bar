<?xml version="1.0" encoding="utf-8"?>
<widget id="com.mendix.widget.custom.progressbar.ProgressBar" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../xsd/widget.xsd">
    <name>Progress Bar</name>
    <description>The widget lets you display a percentage as a bar</description>
    <icon>
        iVBORw0KGgoAAAANSUhEUgAAABAAAAAQCAYAAAAf8/9hAAAAGXRFWHRTb2Z0d2FyZQBBZG9iZSBJ bWFnZVJlYWR5ccllPAAAAKdJREFUeNpi/P//PwMlgImBQjDwBrDw8fFF/vnzR44szSwsj1iUlZUl 161b10GOAUFBQcVMkpKSf1hZWRl27NgBxvjY6Bikl4WHh+c/Gxsbw4cPH8Cm4mOjA5BekAH/2NnZ Gd68eQMWxMfGYsA/Fi4uLrABb9++hSvExUYHIL0snJyc/0H+mTt3LlwCFxsdgPSyAE1+2tDQkEFO LAD1PmMczQsMAAEGACNuS4UbtbU3AAAAAElFTkSuQmCC
    </icon>
    <properties>
        <property key="progressAttribute" type="attribute">
            <caption>Progress attribute</caption>
            <category>Data source</category>
            <description>Holds the progress value</description>
            <attributeTypes>
                <attributeType name="Integer" />
                <attributeType name="Long" />
                <attributeType name="Decimal" />
            </attributeTypes>
        </property>
        <property key="maximumValueAttribute" type="attribute" required="false">
            <caption>Maximum value attribute</caption>
            <category>Data source</category>
            <description>Highest progress value. If not set, maximum value defaults to 100</description>
            <attributeTypes>
                <attributeType name="Integer" />
                <attributeType name="Long" />
                <attributeType name="Decimal" />
            </attributeTypes>
        </property>
        <property key="bootstrapStyleAttribute" type="attribute" required="false">
            <caption>Style attribute</caption>
            <category>Data source</category>
            <description>Value of attribute should be: info, warning, danger, success. Alternatively use the display 'Bar style' property</description>
            <attributeTypes>
                <attributeType name="Enum" />
                <attributeType name="String" />
            </attributeTypes>
        </property>
        <property key="textColorSwitch" type="integer" defaultValue="50">
            <caption>Colour switch value</caption>
            <category>Display</category>
            <description>The percentage at which the text gets a contrast colour (class) from black to white</description>
        </property>
        <property key="barType" type="enumeration" required="true" defaultValue="default">
            <caption>Type</caption>
            <category>Display</category>
            <description>Render the type of progress bar: default, striped or animated </description>
            <enumerationValues>
                <enumerationValue key="default">Plain</enumerationValue>
                <enumerationValue key="striped">Striped</enumerationValue>
                <enumerationValue key="animated">Animated</enumerationValue>
            </enumerationValues>
        </property>
        <property key="onClickOption" type="enumeration" required="true" defaultValue="doNothing">
            <caption>On click option</caption>
            <category>Behaviour</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="doNothing">Do nothing</enumerationValue>
                <enumerationValue key="showPage">Show a page</enumerationValue>
                <enumerationValue key="callMicroflow">Call a microflow</enumerationValue>
            </enumerationValues>
        </property>
        <property key="onClickMicroflow" type="microflow" required="false">
            <caption>MicroFlow</caption>
            <category>Behaviour</category>
            <description>Microflow to execute when the progress bar is clicked</description>
            <returnType type="Void" />
        </property>
        <property key="onClickPage" type="form" required="false">
            <caption>Page</caption>
            <category>Behaviour</category>
            <description>The page to open when the progress bar is clicked</description>
        </property>
        <property key="pageLocation" type="enumeration" required="true" defaultValue="popup">
            <caption>Page location</caption>
            <category>Behaviour</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="content">In content</enumerationValue>
                <enumerationValue key="popup">Pop-up</enumerationValue>
                <enumerationValue key="modal">Blocking pop-up</enumerationValue>
            </enumerationValues>
        </property>
        <property key="progressStyle" type="enumeration" required="true" defaultValue="default">
            <caption>Progress style</caption>
            <category>Display</category>
            <description>The color of the progress bar using bootstrap classes. Only used when 'Style attribute' is not set</description>
            <enumerationValues>
                <enumerationValue key="default">None</enumerationValue>
                <enumerationValue key="success">Success</enumerationValue>
                <enumerationValue key="info">Info</enumerationValue>
                <enumerationValue key="warning">Warning</enumerationValue>
                <enumerationValue key="danger">Danger</enumerationValue>
            </enumerationValues>
        </property>
    </properties>
</widget>
